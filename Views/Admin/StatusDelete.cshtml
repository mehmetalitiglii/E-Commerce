@model Status
@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
  ViewData["Title"] = "Durum Sil";
}


<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet box red">
      <div class="portlet-body">
        <div class="table-scrollable">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th>
                  @Html.DisplayFor(Model => Model.StatusID)
                </th>
                <th>
                  @Html.DisplayFor(Model => Model.StatusName)
                </th>
                <th>
                  @Html.DisplayFor(Model => Model.IsActive)
                </th>

              </tr>
            </thead>
          </table>
          <form asp-action="StatusDelete" method="post">
            <input type="hidden" asp-for="StatusID"/>
            <input type="submit" value="SİL" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')" />
            <a asp-action="StatusIndex" class="btn btn-success">Durum Listesi</a>
          </form>
        </div>
      </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
  </div>
</div>
