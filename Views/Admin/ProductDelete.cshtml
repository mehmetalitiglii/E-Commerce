@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
  @model Product;
  ViewData["Title"] = "Delete Product";
}



<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- BEGIN SAMPLE TABLE PORTLET-->
    <div class="portlet box red">
      <div class="portlet-body">
        <div class="table-scrollable">
          <table class="table table-dark table-hover">
            <thead>
              <tr>
                <th>
                  @Html.DisplayFor(Model => Model.ProductID)
                </th>
                <th>
                  @Html.DisplayFor(Model => Model.ProductName)
                </th> 
                <th>
                  @Html.DisplayFor(Model => Model.UnitPrice)
                </th>
                <th>
                  @Html.DisplayFor(Model => Model.IsActive)
                </th>

              </tr>
            </thead>
          </table>
          <form asp-action="ProductDelete" method="post">
            <input type="hidden" asp-for="ProductID" />
            <input type="submit" value="SİL" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')" />
            <a asp-action="ProductIndex" class="btn btn-success">Ürün Listesi</a>
          </form>
        </div>
      </div>
    </div>
    <!-- END SAMPLE TABLE PORTLET-->
  </div>
</div>